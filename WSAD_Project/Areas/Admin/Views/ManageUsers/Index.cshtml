@model List<WSAD_Project.Areas.Admin.Models.ViewModels.ManageUser.ManageUserViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Manage Users</h2>

@using (Html.BeginForm("Delete", "ManageUsers"))
{
    @Html.AntiForgeryToken()

    <p>
        <button type="submit" class="btn btn-danger">Delete Selected Users</button>
        <span>&nbsp;</span>
        @(Html.ActionLink("Create New User", "Create", "ManageUsers", null, new { @class = "btn btn-success" }))
    </p>

    <table class="table">
        <tr>
            <th>
                &nbsp;
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Email Address
            </th>
            <th>
                User Name
            </th>
            <th>
                Is Active
            </th>
            <th>
                Is Presenter
            </th>
            <th>
                Is Admin
            </th>
            <th>
                Gender
            </th>
            <th>
                Date Created
            </th>
            <th></th>
        </tr>

        @*@foreach (var item in Model)*@
        @for (int i = 0; i < Model.Count; i++)
        {
            var item = Model[i];
            
            <tr>
                <td>
                    @Html.HiddenFor(x => Model[i].Id)
                    @Html.CheckBoxFor(x => Model[i].IsSelected)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsPresenter)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsAdmin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "ManageUsers", new { id = item.Id }, null) | 
                    @Html.ActionLink("Registered Sessions", "SessionListByUser", "ManageSessions", new { userId = item.Id }, null)
                </td>
            </tr>
        }

    </table>

    <button type="submit" class="btn btn-danger">Delete Selected Users</button>
    <span>&nbsp;</span>
    @(Html.ActionLink("Create New User", "Create", "ManageUsers", null, new { @class = "btn btn-success" }));
}
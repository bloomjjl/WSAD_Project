@model List<WSAD_Project.Models.ViewModels.ManageSession.SessionSignUpViewModel>

@{
    ViewBag.Title = "SignUp";
}

<h2>Session Sign Up</h2>

@using (Html.BeginForm("SignUp", "ManageSessions"))
{
    <button type="submit" class="btn btn-success">Sign Up For Selected Sessions</button>
    @Html.ActionLink("Cancel Sign Up", "Index")

    <table class="table">
        <tr>
            <th>
                &nbsp;
            </th>
            <th>
                Title
            </th>
            <th>
                Description
            </th>
            <th>
                Address
            </th>
            <th>
                Room
            </th>
            <th>
                Time
            </th>
            <th>
                Occupancy
            </th>
            <th></th>
        </tr>

        @for (int i = 0; i < Model.Count; i++)
        {
            var item = Model[i];
            <tr>
                <td>
                    @Html.HiddenFor(x => Model[i].Id)
                    @Html.CheckBoxFor(x => Model[i].IsSelected)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Room)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Time)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Occupancy)
                </td>
                <td>
@*                    @Html.ActionLink("Details", "Details", "ManageSessions", new { id = item.Id }, null)
*@                </td>
            </tr>
        }

    </table>

    <button type="submit" class="btn btn-success">Sign Up For Selected Sessions</button>
    @Html.ActionLink("Cancel Sign Up", "Index")

}
